= form_for @image, :html => {:multipart => true} do |f|
  - if @image.errors.any?
    #error_explanation
      %h2= "#{pluralize(@image.errors.count, "error")} prohibited this image from being saved:"
      %ul
        - @image.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.hidden_field :key
  
  .field
    = f.label :name
    = f.text_field :name
  .field
    %p= @image.picture_name
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
