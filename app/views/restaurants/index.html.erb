<%- model_class = Restaurant -%>
<div ng-controller="mapController" class="ng-scope">
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>
  <%= search_form_for @search do |f| %>
    <p>
      <%= f.label :name_cont %>
      <%= f.text_field :name_cont %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>

  <map zoom="11">
    <marker position="current" centered="true" on-click="foo()"></marker>
  </map>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:lng) %></th>
        <th><%= model_class.human_attribute_name(:lat) %></th>
        <th><%= model_class.human_attribute_name(:price) %></th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat="restaurant in restaurants | orderBy: 'name' | startFrom:currentPage*pageSize | limitTo:pageSize">
        <td>{{ restaurant.name }}</td>
        <td>{{ restaurant.lng }}</td>
        <td>{{ restaurant.lat }}</td>
        <td>{{ restaurant.price }}</td>
        <td><a class='btn btn-primary' href="/restaurants/{{restaurant.id}}">Show</a></td>
      </tr>
    </tbody>
  </table>
  <button ng-disabled="currentPage == 0" ng-click="currentPage=currentPage-1">Previous</button>
  {{currentPage+1}}/{{numberOfPages()}}
  <button ng-disabled="currentPage >= restaurants.length/pageSize - 1" ng-click="currentPage=currentPage+1">Next</button>

  <% if current_user.restaurant %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
             edit_restaurant_path(current_user.restaurant), :class => 'btn btn-primary' %>
  <% elsif current_user.role == "manager" %>
    <%= link_to t('.new', :default => t("helpers.links.new")),
            new_restaurant_path,
            :class => 'btn btn-primary' %>
  <% end %>
</div>
