%h1 Listing images

%table
  %tr
    %th Name
    %th Upload description
    %th Description
    %th User
    %th
    %th
    %th

  - @images.each do |image|
    %tr
      %td= image.name
      %td= image.upload_description
      %td= image.description
      %td= image.user_id
      %td= link_to 'Show', image
      %td= link_to 'Edit', edit_image_path(image)
      %td= link_to 'Destroy', image, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br
= direct_upload_form_for @uploader do |f|
  %p= f.file_field :picture
  %p= f.submit "Upload Image"
